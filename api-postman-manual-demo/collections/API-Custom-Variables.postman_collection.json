		{
			"name": "set & unset variables",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.variables.set(\"local_url\", \"http://localhost:3000\");"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"var json = pm.response.json();\r",
							"pm.globals.set(\"global_id\", json.id);\r",
							"pm.collectionVariables.set(\"coll_id\", json.id);\r",
							"pm.environment.set(\"env_id\", json.id);\r",
							"pm.variables.set(\"local_id\", json.id);\r",
							"console.log(pm.variables.get(\"local_id\"));\r",
							"\r",
							"pm.globals.unset(\"global_id\");\r",
							"pm.collectionVariables.unset(\"coll_id\");\r",
							"pm.environment.unset(\"env_id\");"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
