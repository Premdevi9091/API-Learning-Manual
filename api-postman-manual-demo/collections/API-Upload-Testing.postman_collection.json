							"        pm.expect(jsonData[i]).to.have.property(\"fileDownloadUri\");\r",
							"        pm.expect(jsonData[i]).to.have.property(\"fileType\");\r",
							"        pm.expect(jsonData[i]).to.have.property(\"size\");\r",
							"    }  \r",
							"});\r",
							"\r",
							"pm.test(\"File name validation\", function(){\r",
							"    pm.expect(jsonData[0].fileName).to.eql(\"Test2.txt\");\r",
							"    pm.expect(jsonData[1].fileName).to.eql(\"Test3.txt\");\r",
							"});\r",
							"\r",
							"pm.test(\"Response time < 500ms\", function(){\r",
							"    pm.expect(pm.response.responseTime).to.be.below(500);\r",
							"});\r",
							"\r",
							"pm.test(\"File type is text/plain\", function () {\r",
							"    pm.expect(jsonData[0].fileType).to.equal(\"text/plain\");\r",
							"});\r",
							"\r",
							"pm.test(\"file download url validation\", function(){\r",
							"    pm.expect(jsonData[0].fileDownloadUri).to.include(\"/downloadFile/\");\r",
							"    pm.expect(jsonData[0].fileDownloadUri).to.match(/^http:\\/\\/localhost:8080/);  \r",
							"});\r",
							"\r",
							"pm.test(\"File size validation\", function () {\r",
